<div class="row">
    <% @data[:products].each do |product| %>
        <div class="col-sm-6 col-md-4 col-lg-2">
            <div class="cic d-flex align-items-center">
                <img class="card-img-top" src="<%= product['image'] %>" alt="Product Image">
            </div>
            <div class="card-body">
                <p><%= product['name'].slice(0,25) %>...</p>
                <span>SKU: <%= product['sku'] %></span>
                <span><%= product['customerReviewAverage'] %> stars avg.</span>
                <li>Last Change: <%= product['priceUpdateDate'].split("T")[0] %></li>
                <li>Price: $<%= product['salePrice'] %></li>
                <a class="btn btn-primary" href="<%= product['url'] %>">$<%= product['dollarSavings'].to_i %> Off</a>
            </div>
        </div>
    <% end %>
</div>