<section class="product-grid_container">
    <div class="product-grid">
        <% @data[:products].each do |product| %>
            <section class="grid-item">
                <div class="card">
                    <div class="image-container">
                        <img class="card-image" src="<%= product['image'] %>" alt="">
                    </div>
                        <span class="pricing-overlay">$<%= product['dollarSavings'].to_i %> OFF</span>
                    <div class="card-content">
                        <p class="product-title"><%= product['name'] %></p>
                        <p class="product-sku">SKU: <%= product['sku'] %></p>
                        <p class="product-stars"><%= product['customerReviewAverage'] %> stars avg.</p>
                        <p class="date">Last Change: <%= product['priceUpdateDate'].split("T")[0] %></p>
                        <p class="pricing">Price: $<%= product['salePrice'] %></p>
                    </div>
                        <a class="buy-now" href="<%= product['url'] %>">Buy Now</a>
                </div>
            </section>
        <% end %>
    </div>
</section>