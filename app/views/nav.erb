<nav>
    <% if @data[:page] > 1 %>
        <a href="/page/1">first page</a>
        <a href="/page/<%= @data[:page] - 1 %>"><%= @data[:page] - 1 %></a>    
    <% end %>


    <a href="/page/<%= @data[:page] %>"><%= @data[:page] %></a>    

    <% if @data[:page] != @data[:pages] %>
